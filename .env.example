# EnglishEar Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# OpenAI API Keys (Required)
OPENAI_API_KEY_DEV=sk-proj-xxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY_STAGING=sk-proj-xxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY_PROD=sk-proj-xxxxxxxxxxxxxxxxxxxxx

# Sentry Error Tracking (Optional)
SENTRY_DSN_STAGING=https://xxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
SENTRY_DSN_PROD=https://xxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# Backend API Configuration
API_BASE_URL_DEV=http://localhost:3000
API_BASE_URL_STAGING=https://staging-api.englishear.com
API_BASE_URL_PROD=https://api.englishear.com

# WebSocket Configuration
WS_URL_DEV=ws://localhost:3000
WS_URL_STAGING=wss://staging-api.englishear.com
WS_URL_PROD=wss://api.englishear.com

# Analytics (Optional)
MIXPANEL_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_WEBRTC=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CRASH_REPORTING=true
ENABLE_ANALYTICS=true

# Performance Targets (milliseconds)
TARGET_FIRST_BYTE_LATENCY=160
TARGET_E2E_LATENCY=200
ALERT_THRESHOLD_LATENCY=500

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_AUDIO_SIZE_MB=10

# Security
ENCRYPTION_KEY=CHANGE_THIS_IN_PRODUCTION_TO_32_CHAR_KEY
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_TO_SECURE_SECRET

# Debug Settings (Development Only)
DEBUG_MODE=true
VERBOSE_LOGGING=false
MOCK_API_RESPONSES=false